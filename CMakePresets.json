{
  "version": 3,

  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "clang_release",
      "displayName": "Clang Release",
      "description": "Clang Release config",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/clang_release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": {
          "type": "STRING",
          "value": "clang"
        },
        "CMAKE_CXX_COMPILER": {
          "type": "STRING",
          "value": "clang++"
        },
        "CMAKE_EXPORT_COMPILE_COMMANDS": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "RelWithDebInfo"
        },
        "WERROR": {
          "type": "BOOL",
          "value": "ON"
        },
        "DC_BIN_DIR": {
          "type": "STRING",
          "value": "clang_release"
        }
      },
      "warnings": {
        "uninitialized": true
      }
    },

    {
      "name": "gcc_release",
